<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:padding="5dp"
    android:background="@color/splash_back"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please fill the form"
        android:textColor="#BBBBBB"
        android:paddingLeft="10dp"
        android:layout_marginBottom="50dp"
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                app:srcCompat="@drawable/ic_baseline_supervised_user_circle_24"
                app:tint="@color/white"
                android:layout_centerVertical="true"/>

            <EditText
                android:id="@+id/reg_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/login_input"
                android:ems="10"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:paddingVertical="15dp"
                android:paddingStart="35dp"
                android:paddingEnd="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                app:srcCompat="@drawable/ic_baseline_call_24"
                app:tint="@color/white"
                android:layout_centerVertical="true"/>

            <EditText
                android:id="@+id/reg_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/login_input"
                android:ems="10"
                android:hint="Phone"
                android:inputType="textPersonName"
                android:paddingVertical="15dp"
                android:paddingStart="35dp"
                android:paddingEnd="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                app:srcCompat="@drawable/ic_outline_email_24"
                app:tint="@color/white"
                android:layout_centerVertical="true"/>

            <EditText
                android:id="@+id/reg_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/login_input"
                android:ems="10"
                android:hint="Email"
                android:inputType="textPersonName"
                android:paddingVertical="15dp"
                android:paddingStart="35dp"
                android:paddingEnd="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                app:srcCompat="@drawable/ic_outline_lock_24"
                app:tint="@color/white"
                android:layout_centerVertical="true"/>

            <EditText
                android:id="@+id/reg_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/login_input"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingVertical="15dp"
                android:paddingStart="35dp"
                android:paddingEnd="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                app:srcCompat="@drawable/ic_outline_lock_24"
                app:tint="@color/white"
                android:layout_centerVertical="true"/>

            <EditText
                android:id="@+id/reg_rpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/login_input"
                android:ems="10"
                android:hint="Re-type Password"
                android:inputType="textPassword"
                android:paddingVertical="15dp"
                android:paddingStart="35dp"
                android:paddingEnd="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                app:srcCompat="@drawable/ic_baseline_security_24"
                app:tint="@color/white"
                android:layout_centerVertical="true"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/reg_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/login_input"

                android:hint="User type"
                app:boxStrokeWidth="0dp"
                android:paddingVertical="2dp"
                android:paddingStart="35dp"
                android:paddingEnd="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                <AutoCompleteTextView
                    android:id="@+id/acTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>


        </RelativeLayout>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reg_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textAllCaps="false"
            android:background="@drawable/login_button"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/reg_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Already have an account ? Sign in here"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_margin="20dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>